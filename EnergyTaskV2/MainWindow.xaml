<Window x:Class="EnergyTaskV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnergyTaskV2"
        mc:Ignorable="d" Icon="/Images/icon.ico"
        Title="Управление сотрудниками" MinHeight="500" MinWidth="1000" Height="650" Width="1200">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🏢" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="EnergyTask" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"/>
                </StackPanel>

                <!-- Заголовок текущей страницы -->
                <TextBlock Grid.Column="1" 
                       Text="Организационная структура"
                       Foreground="White" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            </Grid>
        </Border>

        <!-- Основной Frame для навигации -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"
           Source="Pages/MainPage.xaml"/>

    </Grid>
</Window>
