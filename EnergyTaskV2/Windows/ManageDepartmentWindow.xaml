<Window x:Class="EnergyTask.Windows.ManageDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnergyTask.Windows"
        mc:Ignorable="d"
        Title="Управление подразделениями" Height="550" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding DialogTitle}"
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Название -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Название подразделения *" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="NameDepTB" 
                     Text="{Binding DepartmentName, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="14" 
                     Padding="8"
                     MaxLength="100"/>
        </StackPanel>

        <!-- Родительское подразделение -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Родительское подразделение" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="ParentInfoText" 
                       Text="Выберите родительское подразделение (необязательно)"
                       FontSize="11"
                       Foreground="#666"
                       Margin="0,0,0,5"/>
            <ComboBox x:Name="ParentDepCB"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding ParentId}"
                      SelectionChanged ="ParentDepCB_SelectionChanged"
                      FontSize="14" 
                      Padding="8"/>
        </StackPanel>

        <!-- Информация -->
        <Border Grid.Row="3" 
        Background="#F8F9FA" 
        BorderBrush="#DDD" 
        BorderThickness="1"
        Margin="0,0,0,15"
        Padding="10">
            <StackPanel>
                <TextBlock Text="Структура подразделений:" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,5"/>
                <TextBlock Text="• Служба → Управление → Отдел → Группа"
                   FontSize="11"/>
                <TextBlock Text="• Группа не может иметь дочерних подразделений" 
                   FontSize="11"/>
                <TextBlock Text="• Префикс уровня добавляется автоматически" 
                   FontSize="11"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    x:Name="CancelBtn"
                    Click="CancelBtn_Click"
                    Background="#95A5A6" 
                    Foreground="White"
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    MinWidth="80"/>
            <Button Content="Сохранить" 
                    x:Name="SaveDepBtn"
                    Click="SaveDepBtn_Click"
                    Background="#27AE60" 
                    Foreground="White"
                    Padding="15,8" 
                    MinWidth="80"
                    IsEnabled="{Binding CanSave}"/>
        </StackPanel>
    </Grid>
</Window>
