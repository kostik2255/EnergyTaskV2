<Page x:Class="EnergyTask.Pages.EditEmpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnergyTask.Pages" xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Редактирование сотрудника">

    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="1" 
                           Text="Редактирование сотрудника" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Основная форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Width="150" Margin="0,0,30,0">
                    <Border BorderBrush="#3498DB" BorderThickness="2" 
                            Background="#F8F9FA" 
                            Width="120" Height="150" 
                            CornerRadius="5">
                        <Image x:Name="EmployeePhoto" 
                              />
                    </Border>

                    <Button Content="Изменить фото" 
                            x:Name="ChangePhotoBtn" 
                            Width="120" 
                            Margin="0,10,0,0"
                            Click="ChangePhotoBtn_Click"
                            Background="#3498DB" 
                            Foreground="White"
                            Padding="8,5"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                </StackPanel>


                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <StackPanel>
                        <TextBlock Text="ФИО *" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="FullNameTextBox" 
                                 Text="{Binding FullName}" 
                                 FontSize="14" 
                                 Padding="12"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Должность *" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="PositionTextBox" 
                                 Text="{Binding Position}" 
                                 FontSize="14" 
                                 Padding="12"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Дата рождения *" 
                                       FontWeight="Bold" 
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,5"/>
                            <DatePicker x:Name="BirthDatePicker" 
                                        SelectedDate="{Binding BirthDate}" FontSize="14" Padding="8" BorderBrush="#BDC3C7" BorderThickness="1" DisplayDateEnd="{x:Static sys:DateTime.Today}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Дата начала работы *" 
                                       FontWeight="Bold" 
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,5"/>
                            <DatePicker x:Name="StartDatePicker" 
                                        SelectedDate="{Binding StartDate}" FontSize="14" Padding="8" BorderBrush="#BDC3C7" BorderThickness="1"
                                        DisplayDateEnd="{x:Static sys:DateTime.Today}"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel>
                        <TextBlock Text="Подразделение *" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="DepartmentComboBox" 
                                  DisplayMemberPath="Name"
                                  FontSize="14" 
                                  Padding="12,8"
                                  BorderBrush="#BDC3C7"
                                  BorderThickness="1"
                                  Background="White"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Button Grid.Row="2" 
                Content="Удалить сотрудника" 
                x:Name="DeleteBtn"
                Click="DeleteBtn_Click"
                Background="#E74C3C" 
                Foreground="White"
                FontWeight="Bold" 
                Padding="20,10"
                Margin="15,20,0,10"
                HorizontalAlignment="Left"
                BorderThickness="0"/>


        <Border Grid.Row="3" Background="#ECF0F1" Padding="15" CornerRadius="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        x:Name="CancelBtn" 
                        Click="CancelBtn_Click"
                        Background="#95A5A6" 
                        Foreground="White"
                        Padding="20,10" 
                        Margin="0,0,10,0"
                        FontWeight="Bold"
                        BorderThickness="0"/>
                <Button Content="💾 Сохранить изменения" 
                        x:Name="SaveBtn" 
                        Click="SaveBtn_Click"
                        Background="#27AE60" 
                        Foreground="White"
                        Padding="20,10" 
                        FontWeight="Bold"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
