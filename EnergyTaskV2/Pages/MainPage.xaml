<Page x:Class="EnergyTask.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnergyTask.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная страница">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Grid.Column="0" Background="#F8F9FA" Margin="5">
            <Border Background="#34495E">
                <TextBlock Text="Управление" Foreground="White" FontWeight="Bold" Margin="10"/>
            </Border>

            <StackPanel Margin="10">
                <Button Content="➕ Добавить сотрудника" x:Name="AddEmpBtn"
                        Click="AddEmpBtn_Click" Background="#27AE60" Foreground="White" Padding="10,8" FontWeight="Bold"/>

                <Button Content="🏢 Добавить подразделение" 
                        x:Name="AddDepartmentBtn"
                        Click="AddDepartmentBtn_Click" Background="#3498DB" Foreground="White" Padding="10,8" FontWeight="Bold"/>

                <Button Content="🔄 Обновить данные" 
                        x:Name="RefreshEmpBtn"
                        Click="RefreshEmpBtn_Click" Background="#95A5A6" Foreground="White" Padding="10,8" FontWeight="Bold"/>
            </StackPanel>

            <!--Дерево -->
            <Border Margin="10,0,10,10" Background="White" BorderBrush="#DDD" BorderThickness="1">
                <TreeView Name="DepartmentsTreeView" Background="Transparent" BorderThickness="0" FontSize="12"
                    SelectedItemChanged="DepartmentsTreeView_SelectedItemChanged"
                    MouseRightButtonUp="DepartmentsTreeView_MouseRightButtonUp">
                </TreeView>
            </Border>
        </StackPanel>

        <!-- Сотрудники -->
        <Border Grid.Row="0" Grid.Column="1" Margin="5" Background="White" BorderBrush="#DDD" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#ECF0F1" Padding="10">
                    <TextBlock Name="EmployeesHeader" 
                               Text="Выберите подразделение" 
                               FontWeight="Bold"/>
                </Border>

                <ScrollViewer Grid.Row="1">
                    <ListView x:Name="EmployeesLV" 
                    MouseDoubleClick="EmployeesLV_MouseDoubleClick" HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" Margin="5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="2" CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="450"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" 
                                        Source="{Binding PhotoImage}" Width="70" Height="80" Stretch="UniformToFill" HorizontalAlignment="Left"/>

                                        <StackPanel Grid.Column="1" Margin="15,0">
                                            <TextBlock Text="{Binding FullName}" FontWeight="Bold" FontSize="16" Margin="0,0,0,3"/>
                                            <TextBlock Text="{Binding Position}" Foreground="#666" FontSize="14" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding BirthDate, StringFormat='Дата рождения: {0:dd.MM.yyyy}'}" Foreground="#888" FontSize="12" Margin="0,0,15,0"/>
                                                <TextBlock Text="{Binding StartDate, StringFormat='Работает с: {0:dd.MM.yyyy}'}" Foreground="#888" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="✏️" 
                                                x:Name="EditEmpBtn"
                                                Click="EditEmpBtn_Click" ToolTip="Редактировать" Background="Transparent" BorderThickness="0" Padding="12,6" FontSize="14" Margin="2"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Стата -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                Margin="5" 
                Background="#2C3E50" 
                CornerRadius="5">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#34495E" Padding="15" CornerRadius="3">
                    <StackPanel>
                        <TextBlock Text="Сотрудников" 
                                   Foreground="#BDC3C7" 
                                   FontSize="11"
                                   TextAlignment="Center"/>
                        <TextBlock Name="EmployeeCountText" 
                                   Text="0" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="#34495E" Padding="15" CornerRadius="3" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="Средний возраст" 
                                   Foreground="#BDC3C7" 
                                   FontSize="11"
                                   TextAlignment="Center"/>
                        <TextBlock Name="AverageAgeText" 
                                   Text="0" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="#34495E" Padding="15" CornerRadius="3">
                    <StackPanel>
                        <TextBlock Text="Средний стаж" 
                                   Foreground="#BDC3C7" 
                                   FontSize="11"
                                   TextAlignment="Center"/>
                        <TextBlock x:Name="AverageExperienceText" 
                                   Text="0" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
